<?xml version="1.0" encoding="UTF-8"?>
<grammar xmlns="http://relaxng.org/ns/structure/1.0"
    xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
    datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
    <start>
        <element name="poem">
            <element name="title">
                <text/>
            </element>
            <element name="author">
                <text/>
            </element>
            <oneOrMore>
                <element name="stanza">
                    <oneOrMore>
                        <element name="line">
                            <text/>
                        </element>
                    </oneOrMore>
                </element>
            </oneOrMore>
        </element>
    </start>
</grammar>
